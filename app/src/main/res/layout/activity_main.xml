<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@drawable/background"
    tools:context="com.example.samuelkerosi.encryption_application.MainActivity">

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_centerInParent="true"
    >

    <Button
        android:id="@+id/btnAES"
        android:layout_width="200dp"
        android:layout_height="wrap_content"

        android:layout_above="@+id/btnRSA"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="39dp"
        android:backgroundTint="@android:color/white"
        android:gravity="center"
        android:text="AES Encryption"
        android:textColor="@android:color/holo_blue_light" />

    <Button
        android:id="@+id/btnRSA"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnAES"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/btnAES"
        android:layout_marginBottom="211dp"
        android:backgroundTint="@android:color/white"
        android:text="RSA Encryption"
        android:textColor="@android:color/holo_blue_light" />
</LinearLayout>
</RelativeLayout>
